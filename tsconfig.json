{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es6"],
    "module": "commonjs",
    "strict": true,
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": false,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "outDir": "dist"
  },
  "includes": ["src"]
}